apiVersion: v1
kind: Secret
metadata:
  name: veribits-secrets
  namespace: veribits-com
type: Opaque
stringData:
  db_host: "postgresql.databases.svc.cluster.local"
  db_name: "veribits"
  db_user: "postgres"
  db_password: "CHANGE_ME"
  jwt_secret: "CHANGE_ME"
  admin_api_key: "CHANGE_ME"
  oidc_client_secret: "CHANGE_ME"
  redis_host: "redis.databases.svc.cluster.local"

# Note: All production secrets are stored in OCI Vault with prefix "veribits-*"
# This file is for reference only. Use external secrets operator or manual secret creation in production.
