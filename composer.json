{
    "name": "veribits/veribits-api",
    "description": "VeriBits API - Comprehensive verification and validation platform",
    "type": "project",
    "require": {
        "php": ">=8.1",
        "stripe/stripe-php": "^13.0"
    },
    "autoload": {
        "psr-4": {
            "VeriBits\\": "app/src/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
