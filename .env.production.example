JWT_SECRET=your-jwt-secret-here-min-32-chars
DB_PASSWORD=your-database-password-here
ID_VERIFY_API_KEY=your-id-verify-api-key-here
AWS_REGION=us-east-1

# SecretServer.io Integration
# Enable secretserver.io for centralized secret management
SECRETSERVER_ENABLED=true
SECRETSERVER_API_URL=http://localhost:3000
SECRETSERVER_API_KEY=your-secretserver-api-key-here
SECRETSERVER_CACHE_ENABLED=true
SECRETSERVER_CACHE_TTL=300

# Note: When SECRETSERVER_ENABLED=true, secrets are retrieved from secretserver.io
# with automatic fallback to environment variables if secretserver.io is unavailable.
# Legacy note: Actual secrets are stored in OCI Vault with prefix "veribits-*"
